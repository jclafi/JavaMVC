<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC

   "-//Hibernate/Hibernate Mapping DTD 3.0//EN"

   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="modal">

    <class name="Usuario" table="usuario">
        <id name="cd_usuario" column="cd_usuario" type="integer"/>
        
        <property name="nome" column="nome" type="string" not-null="true"/>
        <property name="senha" column="senha" type="string" not-null="true"/>
        <property name="ativo" column="ativo" type="string" not-null="true"/>
    </class>

</hibernate-mapping>